<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back8"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="CalmCompanion"
        android:textColor="#0E0202"
        android:textSize="48sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_community_blog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Community Blog" />

    <Button
        android:id="@+id/btn_consultant"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_community_blog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"

        android:text="Consultant" />

    <Button
        android:id="@+id/btn_links"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_consultant"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Links" />

    <Button
        android:id="@+id/btn_yoga"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_links"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Exercises" />


    <TextView
        android:id="@+id/tv_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_yoga"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="29dp"
        android:gravity="center"
        android:text="My life is just beginning"
        android:textAlignment="center"
        android:textColor="#302C2C"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_quote"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Refresh" />

</RelativeLayout>